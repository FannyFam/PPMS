<%- include('partials/header'); %>
<%- include('partials/sidebar'); %>

<!--main content start-->
<section id="main-content">
  <section class="wrapper">
    <!--overview start-->
    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Dashboard</h3>
        <ol class="breadcrumb">
          <li><i class="fa fa-home"></i><a href="/ppms">Home</a></li>
          <li><i class="fa fa-laptop"></i>Dashboard</li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%- include('partials/alert_messages'); %>
      </div>
    </div>



    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <section class="panel panel-success">
          <header class="panel-heading">
            Demand Management
          </header>
          <div class="list-group">
            <a class="list-group-item " href="/ppms/demand/project_request">Project Request <span style="color:red">(Now
                Available
                !)</span></a>
            <a class="list-group-item " href="#">Change Request</a>
            <a class="list-group-item " href="#">KTLO</a>
            <a class="list-group-item " href="#">Ad-hoc Demand</a>
          </div>
        </section>
        <!--/.info-box-->
      </div>
      <!--/.col-->

      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <section class="panel panel-success">
          <header class="panel-heading">
            Resource Management
          </header>
          <div class="list-group">
            <a class="list-group-item" href="#">Resource Request</a>
          </div>
        </section>
        <!--/.info-box-->
      </div>
      <!--/.col-->

      <!-- 17 Feb Add approval -->
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <section class="panel panel-success">
          <header class="panel-heading">
            Program and Project Delivery
          </header>
          <div class="list-group">
            <a class="list-group-item" href="#">Entity/Institution Approval</a>
            <a class="list-group-item" href="#">Region/Cluster Approval</a>
            <a class="list-group-item" href="#">Project Charter</a>
            <a class="list-group-item" href="#">Project Management Plan</a>
            <a class="list-group-item" href="#">Project Status</a>
            <a class="list-group-item" href="#">Project Cash Flow</a>
            <a class="list-group-item" href="#">Rebaseline Request</a>
            <a class="list-group-item" href="#">Project Template</a>
          </div>
        </section>
        <!--/.info-box-->
      </div>
      <!--/.col-->

      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <section class="panel panel-success">
          <header class="panel-heading">
            Reporting
          </header>
          <div class="list-group">
            <a class="list-group-item" href="#">My Projects</a>
            <a class="list-group-item" href="#">My Status</a>
            <a class="list-group-item" href="#">By Requestor/By BRM/By Project Manager</a>
            <a class="list-group-item" href="#">By Business Org Group</a>
            <a class="list-group-item" href="#">By Business Org Family</a>
            <a class="list-group-item" href="#">By Work Type</a>
            <a class="list-group-item" href="#">By Fund Entities</a>
          </div>
        </section>
        <!--/.info-box-->
      </div>
      <!--/.col-->

    </div>
    <!--/.row-->

    <!-- List of project request created -- 14 Feb -->
    <div class="row">
      <div class="col-lg-12">
        <section class="panel panel-success">
          <header class="panel-heading">
            Project Requests
          </header>
          <div class="panel-body">
            <table class="table table-striped table-advance table-hover" id="projCostForecast" name="projCostForecast">
              <tbody>
                <tr>
                  <th style="width: 10%">Project Request Code</th>
                  <th style="width: 20%">Project Request Name</th>
                  <th style="width: 10%">Status</th>
                  <th style="width: 10%">Owner</th>
                  <th style="width: 10%">Last Updated By</th>
                  <th style="width: 10%">Last Update Date</th>
                </tr>
                <% projReqList.forEach( (item, idx)=> { %>
                <tr>
                  <td><a href="/ppms/demand/project_request/<%=item.projReqCode%>">
                      <%=item.projReqCode%>
                    </a></td>
                  <td>
                    <%=item.projReqname%>
                  </td>
                  <td>
                    <%if(item.projStatus=='Drafted' ){%>
                    <span class="badge bg-warning">Drafted</span>
                    <%}%>
                    <%if(item.projStatus=='Started' ){%>
                    <span class="badge bg-info">Started</span>
                    <%}%>
                    <%if(item.projStatus=='Completed' ){%>
                    <span class="badge bg-success">Completed</span>
                    <%}%>
                    <%if(item.projStatus=='Postponed' ){%>
                    <span class="badge bg-important">Postponed</span>
                    <%}%>
                    <%if(item.projStatus=='Cancelled' ){%>
                    <span class="badge bg-inverse">Cancelled</span>
                    <%}%>
                  </td>
                  <td>
                    <%=item.projOwner%>
                  </td>
                  <td>
                    <%=item.last_update_by%>
                  </td>
                  <td>
                    <%=item.last_update_at%>
                  </td>
                </tr>
                <%})%>
              </tbody>
            </table>
          </div>
        </section>
      </div>
    </div><br><br>
  </section>
</section>
<!--main content end-->
</section>
<!-- container section end -->

<%- include('partials/footer'); %>