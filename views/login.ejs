<%- include('partials/public_header'); %>

  <div class="container">
    <form id="doLogin" class="login-form" action="/ppms/auth" method="POST">
      <div class="login-wrap">
        <p class="login-img"><i class="icon_lock_alt"></i></p>
        <%- include('partials/alert_messages'); %>
        <div class="input-group">
          <span class="input-group-addon"><i class="icon_mail_alt"></i></span>
          <input type="text" id="email_address" name="email_address" class="form-control" placeholder="Email" autofocus>
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="icon_key_alt"></i></span>
          <input type="password" id="password" name="password" class="form-control" placeholder="Password">
        </div>
        <label class="checkbox">
              <span class="pull-left"> <a href="/ppms/signup"> Register</a></span>
              <span class="pull-right"> <a href="#"> Forgot Password?</a></span>
            </label>
        <a class="btn btn-primary btn-lg btn-block" href="#" onclick="document.getElementById('doLogin').submit();">Login</a>
      </div>
    </form>
  </div>

<%- include('partials/public_footer'); %>
